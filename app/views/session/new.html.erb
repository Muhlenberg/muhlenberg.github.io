<body>
	<div class="container">
		<h1 class="center"> Login </h1>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_for(:session, url: login_path) do |f| %>

				<%= f.label :email %>
				<%= f.email_field :email, class: 'input-field' %>

				<%= f.label :password %>
				<%= f.password_field :password, class: 'input-field' %>

				<%= f.check_box :remember_me, class: "checked-box filled-in", id: "remember_checkbox" %>
				<%= f.label :remember_me, class: "input-field", for: "remember_checkbox"%>

				<br>
				<%= f.submit "Log in", class: "btn" %>
				<% end %>

				<div class="left"><p>New user? <%= link_to "Sign up now!", signup_path %></p></div>
			</div>
		</div>
	</div>
</body>